{% if page.header.sidebar_links %}
<div class="sidebar-content">
  {% for links in page.header.sidebar_links %}
     <h4>{{ links.heading }}</h4>
     <ul>
     {% for link in links.links %}
         <li><a href="{{ link.url }}">{{ link.label }}</a></li>
     {% endfor %}
     </ul>
  {% endfor %}
 </div>
{% endif %}
{### Subpage Navigation ###}
{% if page.header.side_bar_menu == true %}
    {% set depth = 1 %}

    {% if page.header.sidebar_navigation.maxdepth %}
      {% set maxdepth = page.header.sidebar_navigation.maxdepth %}
    {% else %}
      {% set maxdepth = config.site.sidebar_navigation.maxdepth %}
    {% endif %}

    {% macro subpage_menu(page, maxdepth, depth) %}

      {% if page.visible %}
          {% set current_page = (page.active) ? 'active' : '' %}
          <li class="{{ current_page }}">
            <a href="{{ page.url }}" class="external">
            {% if page.header.icon %}<i class="fa fa-fw fa-{{ page.header.icon }}"></i>{% endif %}
            {% if page.active %}
              <strong>{{ page.menu }}</strong>
            {% else %}
              {{ page.menu }}
            {% endif %}
            </a>
            {% if ( (page.active and page.children.count > 0) or page.activeChild ) and depth < maxdepth  %}
              <ul class="navigation">
                {% for subpage in page.children %}
                  {{ _self.subpage_menu(subpage, maxdepth, (depth + 1) ) }}
                {% endfor %}
              </ul>
            {% endif %}
          </li>
      {% endif %}
    {% endmacro %}

    <div class="sidebar-content">
      {% if page.collection.count > 0 %}
        <ul class="navigation">
        {% for subpage in page.collection %}
          {% if page != subpage %}
            {{ _self.subpage_menu(subpage, maxdepth, depth) }}
          {% endif %}
        {% endfor %}
        </ul>
      {% endif %}
    </div>
{% endif %}
{### Related pages menu ###}
{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
<div class="sidebar-content">
  <h4>Related Pages</h4>
  {% include 'partials/relatedpages.html.twig' %}
</div>
{% endif %}
{% if page.header.side_bar_content %}
{% set side_bar_content = page.header.side_bar_content %}
<div class="sidebar-content">
  {% for item in side_bar_content %}
    {{ item.content|markdown }}
  {% endfor %}
</div>
{% endif %}
{% if config.plugins.taxonomylist.enabled and 'online_learning' in page.taxonomy.category%}
<div class="sidebar-content">
    <h4>Learning Bite Topics</h4>
    {% include 'partials/taxonomylist.html.twig' with {'base_url':base_url_relative ~ '/online-learning/bites', 'taxonomy':'topic'} %}
</div>
{% endif %}
