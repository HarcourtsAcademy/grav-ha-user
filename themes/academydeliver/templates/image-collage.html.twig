{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
    {% if show_onpage_menu %}
        {% do assets.add('theme://js/singlePageNav.min.js') %}
    {% endif %}
    {{ parent() }}
{% endblock %}


{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        $('#navbar').singlePageNav({
            offset: $('#header').outerHeight(),
            filter: ':not(.external)',
            updateHash: true,
            currentClass: 'active'
        });
        </script>
    {% endif %}
{% endblock %}


{% block header_navigation %}
    {% if show_onpage_menu %}
        <ul class="navigation">

        {% macro loop(page) %}
        {% for p in page.children %}
            {% if p.visible %}
                {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
                <li class="{{ current_page }}">
                    <a href="{{ p.url }}" class="external">
                        {% if p.header.icon %}<i class="fa fa-{{ p.header.icon }}"></i>{% endif %}
                        {{ p.menu }}
                    </a>
                    {% if p.children.count > 0 %}
                        <ul>
                            {{ _self.loop(p) }}
                        </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
        {% endmacro %}


        {% if config.themes.deliver.dropdown.enabled %}
            {{ _self.loop(pages) }}
        {% else %}
            {% for page in pages.children %}
                {% if page.visible %}
                    {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                    <li class="{{ current_page }}">
                        <a href="{{ page.url }}" class="external">
                            {% if page.header.icon %}<i class="fa fa-{{ page.header.icon }}"></i>{% endif %}
                            {{ page.menu }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% for mitem in site.menu %}
            <li>
                <a href="{{ mitem.url }}">
                    {% if mitem.icon %}<i class="fa fa-{{ mitem.icon }}"></i>{% endif %}
                    {{ mitem.text }}
                </a>
            </li>
        {% endfor %}

        {% for module in page.collection() %}
            {% set current_module = (module.active or module.activeChild) ? 'active' : '' %}
            <li class="{{ current_module }}"><a href="#{{ _self.pageLinkName(module.menu) }}">{{ module.menu }}</a></li>
        {% endfor %}
         </ul>
    {% else %}
        {{  parent() }}
    {% endif %}
{% endblock %}

{% block content %}

    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper g-grid pure-g-r">
        <div id="content" class="g-block pure-u-2-3">

          {% if page.header.show_date == true %}<h3>{{ page.date|date("jS F Y") }}</h3>{% endif %}

          {{ page.content }}

          <ul class="image-collage">
            {% for image in page.media.images %}
            <li>
                <div class="image-surround">
                    {{ image.lightbox(1024,768).cropZoom(400,400).thumbnail.html }}
                </div>
                {% if image.meta.title %}
                <div class="image-info">
                    <h2>{{ image.meta.title }}</h2>
                    {% if image.meta.description %}
                    <p>{{ image.meta.description }}</p>
                    {% endif %}
                </div>
                {% endif %}
            </li>
            {% endfor %}
          </ul>

          {% if page.collection %}
            {% if page.header.content_heading %}<h2>{{ page.header.content_heading }}</h2>{% endif %}
          {% endif %}
          {% for page in page.collection %}
            {% set image = page.media.images|first %}
            {% if image %}
            <section class="sibling-item">

              <ul class="image-collage">
                <li>
                    <div class="image-surround">
                        <a href="{{ page.url }}">{{ image.cropZoom(300,300).html }}</a>
                    </div>
                    {% if page.title %}
                    <div class="image-info">
                        <h3><a href="{{ page.url }}">{{ page.title }}</a></h3>
                        {% if page.date %}
                          <p>{{ page.date|date(config.system.pages.dateformat.short) }}</p>
                        {% endif %}
                    </div>
                    {% endif %}
                </li>
              </ul>
            </section>
            {% endif %}

          {% endfor %}

        </div>
        <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
            {% include 'partials/sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}
