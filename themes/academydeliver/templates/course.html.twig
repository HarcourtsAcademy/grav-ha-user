{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
    {% if show_onpage_menu %}
        {% do assets.add('theme://js/singlePageNav.min.js') %}
    {% endif %}
    {{ parent() }}
{% endblock %}


{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        $('#navbar').singlePageNav({
            offset: $('#header').outerHeight(),
            filter: ':not(.external)',
            updateHash: true,
            currentClass: 'active'
        });
        </script>
    {% endif %}
{% endblock %}


{% block header_navigation %}
    {% if show_onpage_menu %}
        <ul class="navigation">

        {% macro loop(page) %}
        {% for p in page.children %}
            {% if p.visible %}
                {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
                <li class="{{ current_page }}">
                    <a href="{{ p.url }}" class="external">
                        {% if p.header.icon %}<i class="fa fa-{{ p.header.icon }}"></i>{% endif %}
                        {{ p.menu }}
                    </a>
                    {% if p.children.count > 0 %}
                        <ul>
                            {{ _self.loop(p) }}
                        </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
        {% endmacro %}


        {% if config.themes.deliver.dropdown.enabled %}
            {{ _self.loop(pages) }}
        {% else %}
            {% for page in pages.children %}
                {% if page.visible %}
                    {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                    <li class="{{ current_page }}">
                        <a href="{{ page.url }}" class="external">
                            {% if page.header.icon %}<i class="fa fa-{{ page.header.icon }}"></i>{% endif %}
                            {{ page.menu }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% for mitem in site.menu %}
            <li>
                <a href="{{ mitem.url }}">
                    {% if mitem.icon %}<i class="fa fa-{{ mitem.icon }}"></i>{% endif %}
                    {{ mitem.text }}
                </a>
            </li>
        {% endfor %}

        {% for module in page.collection() %}
            {% set current_module = (module.active or module.activeChild) ? 'active' : '' %}
            <li class="{{ current_module }}"><a href="#{{ _self.pageLinkName(module.menu) }}">{{ module.menu }}</a></li>
        {% endfor %}
         </ul>
    {% else %}
        {{  parent() }}
    {% endif %}
{% endblock %}

{% block content %}

    {% set banner_image = page.header.banner_image %}

    {% if banner_image %}
    <div class="flush-top page-header page-header-image" style="background: {{ page.header.bg_color }} url({{ url( banner_image ) }}) no-repeat right;">
    {% else %}
    <div class="page-header">
    {% endif %}
        <h1>{{ page.title }}</h1>
    </div>

    {% if config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper g-grid pure-g-r">
        <div id="content" class="g-block pure-u-2-3">
          {{ page.content }}

          {% if page.header.target_groups %}
          <h2>Target Groups</h2>
          <ul>
            {% for group in page.header.target_groups %}
              <li>{{ group }}</li>
            {% endfor %}
          </ul>
          {% endif %}

          {% if page.header.qualification_units %}
          <h2>Industry Qualification Units Delivered</h2>
          <ul>
          {% for unit in page.header.qualification_units %}
              <li class="qualification-unit"><a href="{{ base_url~site.qualification_unit_path~unit.id|lower }}">{{ site.qualification_units[unit.id].id }}</a> - {{ site.qualification_units[unit.id].name }}</li>
          {% endfor %}
          </ul>
          {% endif %}

          {% if page.header.course_content %}
          <h2>What You Will Learn</h2>
          <ul>
          {% for content_item in page.header.course_content %}
              <li class="course-content">{{ content_item }}</li>
          {% endfor %}
          </ul>
          {% endif %}

          {% if page.header.course_structure %}
            <h2>Programme Structure</h2>
            <p>{{ page.header.course_structure }}</p>
          {% endif %}

          {% if page.header.course_information %}
            <h2>Additional Information</h2>
            <dl class="dl-horizontal">
            {% for info in page.header.course_information %}
              <dt>{{ info.key}}</dt>
              <dd>{{ info.value }}</dd>
            {% endfor %}
            </dl>
          {% endif %}

          {% if page.header.further_information %}
            <h2>Further Information</h2>
            <p>For all course enquiries and pricing details, please <a href="{{ base_url }}/about-us/contact-us">contact us</a>.</p>
          {% endif %}

          {% for module in page.collection() %}
              <div id="{{ _self.pageLinkName(module.menu) }}"></div>
              {{ module.content }}
          {% endfor %}

          {% if page.header.list_subpages %}
            {% for page in page.children %}
              <h3><a href="{{ page.url }}">{{ page.title }}</a></h3>
              <p>{{ page.summary }} <a class="button" href="{{ page.url }}">Read more</a></p>
            {% endfor %}
          {% endif %}

        </div>
        <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
            {% include 'partials/sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}
