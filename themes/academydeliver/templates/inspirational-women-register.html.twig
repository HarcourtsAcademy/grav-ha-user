{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
    {% if show_onpage_menu %}
        {% do assets.add('theme://js/singlePageNav.min.js') %}
    {% endif %}
    {{ parent() }}
{% endblock %}


{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        $('#navbar').singlePageNav({
            offset: $('#header').outerHeight(),
            filter: ':not(.external)',
            updateHash: true,
            currentClass: 'active'
        });
        </script>
    {% endif %}
{% endblock %}


{% block header_navigation %}
    {% if show_onpage_menu %}
        <ul class="navigation">

        {% macro loop(page) %}
        {% for p in page.children %}
            {% if p.visible %}
                {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
                <li class="{{ current_page }}">
                    <a href="{{ p.url }}" class="external">
                        {% if p.header.icon %}<i class="fa fa-{{ p.header.icon }}"></i>{% endif %}
                        {{ p.menu }}
                    </a>
                    {% if p.children.count > 0 %}
                        <ul>
                            {{ _self.loop(p) }}
                        </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
        {% endmacro %}


        {% if config.themes.deliver.dropdown.enabled %}
            {{ _self.loop(pages) }}
        {% else %}
            {% for page in pages.children %}
                {% if page.visible %}
                    {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                    <li class="{{ current_page }}">
                        <a href="{{ page.url }}" class="external">
                            {% if page.header.icon %}<i class="fa fa-{{ page.header.icon }}"></i>{% endif %}
                            {{ page.menu }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% for mitem in site.menu %}
            <li>
                <a href="{{ mitem.url }}">
                    {% if mitem.icon %}<i class="fa fa-{{ mitem.icon }}"></i>{% endif %}
                    {{ mitem.text }}
                </a>
            </li>
        {% endfor %}

        {% for module in page.collection() %}
            {% set current_module = (module.active or module.activeChild) ? 'active' : '' %}
            <li class="{{ current_module }}"><a href="#{{ _self.pageLinkName(module.menu) }}">{{ module.menu }}</a></li>
        {% endfor %}
         </ul>
    {% else %}
        {{  parent() }}
    {% endif %}
{% endblock %}

{% block content %}

    {% if config.plugins.breadcrumbs.enabled %}
      {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper g-grid pure-g-r">
        <div id="content" class="g-block pure-u-2-3">

          <section class="inspirational-women-item">

              {% if page.header.inspirational_women.region %}
                <h3>{{ page.header.inspirational_women.region }} - {{ page.header.inspirational_women.country }}</h3>
              {% else %}
                <h3>{{ page.header.inspirational_women.country }}</h3>
              {% endif %}

              {% set banner = page.media.images|first %}

              {% if banner %}
              <div class="profile-image">
                  {{ banner.html }}
              </div>
              {% endif %}

              <ul class="contact-icons">
                  {% if page.header.inspirational_women.email %}
                  <li><i class="fa fa-envelope-o"></i> <a href="mailto:{{ page.header.inspirational_women.email|safe_email }}"> Email {{ page.header.inspirational_women.firstname }}</a> </li>
                  {% endif %}
                  <li><i class="fa fa-phone"></i> {{ page.header.inspirational_women.phone }} </li>
                  {% if page.header.inspirational_women.mobile %}
                  <li><i class="fa fa-mobile"></i> {{ page.header.inspirational_women.mobile }} </li>
                  {% endif %}
                  {% if page.header.inspirational_women.harcourtsone %}
                  <li><i class="fa fa-user"></i> <a href="{{ page.header.inspirational_women.harcourtsone }}"> HarcourtsOne profile</a> </li>
                  {% endif %}
              </ul>

              {% if page.header.inspirational_women.profile %}
              <h3>About {{ page.header.inspirational_women.firstname }}</h3>
              <div class="profile">{{ page.header.inspirational_women.profile|markdown }}</div>
              {% endif %}

              {% if page.header.inspirational_women.message %}
              <h3>Key Messages</h3>
              <div class="message">{{ page.header.inspirational_women.message|markdown }}</div>
              {% endif %}

            </section>

          {{ page.content }}

        </div>
        <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
            {% include 'partials/sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}
