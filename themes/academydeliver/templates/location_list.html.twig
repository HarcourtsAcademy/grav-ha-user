{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
    {% if show_onpage_menu %}
        {% do assets.add('theme://js/singlePageNav.min.js') %}
    {% endif %}
    {{ parent() }}
{% endblock %}


{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        $('#navbar').singlePageNav({
            offset: $('#header').outerHeight(),
            filter: ':not(.external)',
            updateHash: true,
            currentClass: 'active'
        });
        </script>
    {% endif %}
{% endblock %}


{% block header_navigation %}
    {% if show_onpage_menu %}
        <ul class="navigation">

        {% macro loop(page) %}
        {% for p in page.children %}
            {% if p.visible %}
                {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
                <li class="{{ current_page }}">
                    <a href="{{ p.url }}" class="external">
                        {% if p.header.icon %}<i class="fa fa-{{ p.header.icon }}"></i>{% endif %}
                        {{ p.menu }}
                    </a>
                    {% if p.children.count > 0 %}
                        <ul>
                            {{ _self.loop(p) }}
                        </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
        {% endmacro %}


        {% if config.themes.deliver.dropdown.enabled %}
            {{ _self.loop(pages) }}
        {% else %}
            {% for page in pages.children %}
                {% if page.visible %}
                    {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                    <li class="{{ current_page }}">
                        <a href="{{ page.url }}" class="external">
                            {% if page.header.icon %}<i class="fa fa-{{ page.header.icon }}"></i>{% endif %}
                            {{ page.menu }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% for mitem in site.menu %}
            <li>
                <a href="{{ mitem.url }}">
                    {% if mitem.icon %}<i class="fa fa-{{ mitem.icon }}"></i>{% endif %}
                    {{ mitem.text }}
                </a>
            </li>
        {% endfor %}

        {% for module in page.collection() %}
            {% set current_module = (module.active or module.activeChild) ? 'active' : '' %}
            <li class="{{ current_module }}"><a href="#{{ _self.pageLinkName(module.menu) }}">{{ module.menu }}</a></li>
        {% endfor %}
         </ul>
    {% else %}
        {{  parent() }}
    {% endif %}
{% endblock %}

{% block content %}

    {% if config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper g-grid pure-g-r">
        {% if page.header.side_bar_menu == true%}
        <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
          {% include 'partials/sidebar.html.twig' %}
        </div>
        <div id="content" class="g-block pure-u-2-3">
        {% else %}
        <div id="content" class="g-block pure-u-1-1">
        {% endif %}

          {% set page_image = page.media.images|first %}
          {% if page_image %}
            <p><img src="{{ page_image.url }}"/></p>
          {% endif %}

          {{ page.content }}

          {% if page.header.list_locations %}
            {% set country = null %}
            {% for subpage in page.children %}
              {% if subpage.header.office.location.country != country %}
                {% set country = subpage.header.office.location.country %}
                <h2 id="{{ country|url_encode }}">{{ country }}</h2>
              {% endif %}
              {% if uri.query %}
                <h3><a href="{{ subpage.url ~ '?' ~ uri.query }}">{{ subpage.menu }}</a></h3>
                <!-- TBD only show the location in the uri. -->
              {% else %}
                <h3><a href="{{ subpage.url }}">{{ subpage.menu }}</a></h3>
                <div class="location">
                {% if subpage.header.office.phone %}
                    <h4>Office Phone Number</h4>
                    {{ subpage.header.office.phone }}
                {% endif %}
                {% if subpage.header.office.location %}
                    {% set fulladdress = subpage.header.office.location.street ~ " " ~ subpage.header.office.location.city ~ " " ~ subpage.header.office.location.region  ~ " " ~ subpage.header.office.location.postcode  ~ " " ~ subpage.header.office.location.country %}
                    <h4>Office</h4>
                    {% set location_image = subpage.media.images|first.cropResize(300,300).quality(80).url %}
                    {% if location_image %}
                    <div class="map"><a href="http://maps.google.com/?q={{ fulladdress|url_encode }}"><img src="{{ location_image }}" width="150" height="150"/></a></div>
                    {% endif %}
                    <p>
                    {{ subpage.header.office.location.street }}<br />
                    {{ subpage.header.office.location.city }}<br />
                    {{ subpage.header.office.location.region }} {{ subpage.header.office.location.postcode }}<br />
                    {{ subpage.header.office.location.country }}
                    </p>
                {% endif %}
                {% if subpage.header.office.hours %}
                    <h4>Office Hours</h4>
                    {{ subpage.header.office.hours|markdown }}
                {% endif %}
                </div>

              {% endif %}
              <p>{{ subpage.summary }}</p>
            {% endfor %}
          {% endif %}

        </div>
    </div>

{% endblock %}
