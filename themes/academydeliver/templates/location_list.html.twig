{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block header_navigation %}
        {{  parent() }}
{% endblock %}

{% block content %}

    {% if config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper g-grid pure-g-r">
        {% if page.header.side_bar_menu == true%}
        <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
          {% include 'partials/sidebar.html.twig' %}
        </div>
        <div id="content" class="g-block pure-u-2-3">
        {% else %}
        <div id="content" class="g-block pure-u-1-1">
        {% endif %}

          {% set page_image = page.media.images|first %}
          {% if page_image %}
            <p><img src="{{ page_image.url }}"/></p>
          {% endif %}

          {{ page.content }}

          {% set isfirst = true %}
          {% if site.location_maps|length > 0 %}
          <ul class="nav nav-tabs">
            {% for map in site.location_maps %}
              {% if isfirst == true %}
              <li class="active"><a data-toggle="tab" href="#{{ map.id }}">{{ map.title }}</a></li>
              {% set isfirst = false %}
              {% else %}
              <li><a data-toggle="tab" href="#{{ map.id }}">{{ map.title }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
          {% endif %}


          {% set isfirst = true %}
          {% if site.location_maps|length > 0 %}
          <div class="tab-content">
            {% for map in site.location_maps %}
              {% if isfirst == true %}
              <div id="{{ map.id }}" class="tab-pane fade in active">
              {% set isfirst = false %}
              {% else %}
              <div id="{{ map.id }}" class="tab-pane fade">
              {% endif %}
                <iframe src="https://www.google.com/maps/d/u/0/embed?mid={{ map.embed }}" style="border:0;width:100%;height:380px;"></iframe>
              </div>
            {% endfor %}
          </div>
          {% endif %}
        </div>
    </div>

{% endblock %}

{% block bottom %}
    {{ parent() }}
    {% if site.location_maps|length > 0 %}
      {% for map in site.location_maps %}
      <script>
        $('#{{ map.id }}').on('shown', function(e) {
            google.maps.event.trigger(map, 'resize');
          });
      </script>
      {% endfor %}
    {% endif %}
{% endblock %}